{
  "name": "gordian-development-web-landing",
  "version": "1.0.0",
  "description": "Gordian Development Web Landing - Full-stack web application",
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --stream run dev",
    "build": "pnpm --recursive run build && node scripts/verify-build.js",
    "lint": "pnpm --recursive run lint",
    "test": "pnpm --recursive run test",
    "deploy": "cd web && npm run build && cd .. && wrangler deploy",
    "verify-build": "node scripts/verify-build.js"
  },
  "keywords": [
    "gordian",
    "development",
    "web",
    "landing",
    "fullstack"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}